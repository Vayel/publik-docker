server {
    listen 8080;
    server_name ${ORG}${CHRONO_SUBDOMAIN}${ENV}.${DOMAIN};
    access_log /var/log/nginx/chrono-access.${ORG}log combined;
    error_log /var/log/nginx/chrono-error.${ORG}log;

    location ~ ^/static/(.+)$ {
        root /;
        try_files /var/lib/chrono/tenants/$host/static/$1
                  /var/lib/chrono/tenants/$host/theme/static/$1
                  /var/lib/chrono/collectstatic/$1
                  =404;
        add_header Access-Control-Allow-Origin *;
    }

    location / {
        proxy_pass         http://unix:/run/chrono/chrono.sock;
        proxy_set_header   Host $http_host;
        proxy_set_header   X-Forwarded-SSL on;
        proxy_set_header   X-Forwarded-Protocol ssl;
        proxy_set_header   X-Forwarded-Proto https;
        proxy_set_header   X-Real-IP $remote_addr;
        proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
    }
}
