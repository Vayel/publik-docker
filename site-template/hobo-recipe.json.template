        "title": "Porte-documents | ${TITLE}"
      }
    },
    {
      "set-theme": {
        "theme": "${THEME}" 
      }
    },
    {
      "set-variable": {
        "name": "collectivite", 
        "value": "${TITLE}"
      }
    },
    {
      "set-variable": {
        "name": "collectivite_site", 
        "value": "${SITE_URL}"
      }
    },
    {
      "set-variable": {
        "name": "collectivite_telephone", 
        "value": "${PHONE}"
      }
    },
    {
      "set-variable": {
        "name": "collectivite_email", 
        "value": "${EMAIL}"
      }
    },
    {
      "set-variable": {
        "name": "collectivite_adresse", 
        "value": "${ADDR}"
      }
    },
    {
      "set-variable": {
        "name": "collectivite_adresse_complement", 
        "value": "${ADDR2}"
      }
    },
    {
      "set-variable": {
        "name": "collectivite_code_postal", 
        "value": "${POSTCODE}"
      }
    },
    {
      "set-variable": {
        "name": "portal_url", 
        "value": "https://${organization}.${combo}/"
      }
    },
    {
      "set-variable": {
        "name": "global_title", 
        "value": "${TITLE}"
      }
    },
    {
      "set-variable": {
        "name": "default_from_email", 
        "value": "${FROM_EMAIL}"
      }
    },
    {
      "set-variable": {
        "name": "email_sender_name", 
        "value": "${EMAIL_SENDER_NAME}"
      }
    },
    {
      "set-variable": {
        "name": "global_email_prefix", 
        "value": "${EMAIL_SUBJECT_PREFIX}"
      }
    }
  ]
