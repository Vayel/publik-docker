{
  "variables": {
    "organization": "${SLUG}",
    "hobo": "${HOBO_SUBDOMAIN}${ENV}.${DOMAIN}",
    "combo": "${COMBO_SUBDOMAIN}${ENV}.${DOMAIN}",
    "combo_agent": "${COMBO_ADMIN_SUBDOMAIN}${ENV}.${DOMAIN}",
